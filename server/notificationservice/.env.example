# Notification Service Environment Variables

# Kafka Configuration
KAFKA_BROKERS=localhost:9093
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-service-group

# Service Configuration
NODE_ENV=development
SERVICE_NAME=notification-service
SERVICE_PORT=3002

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000

# Email Service Configuration (for future real implementation)
# EMAIL_SERVICE_PROVIDER=sendgrid
# EMAIL_API_KEY=your-sendgrid-api-key
# EMAIL_FROM_ADDRESS=noreply@yourcompany.com
# EMAIL_FROM_NAME=Your Company

# SMS Service Configuration (for future real implementation)  
# SMS_SERVICE_PROVIDER=twilio
# SMS_ACCOUNT_SID=your-twilio-account-sid
# SMS_AUTH_TOKEN=your-twilio-auth-token
# SMS_FROM_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
MAX_EVENT_AGE_MINUTES=60

# Performance Configuration
MAX_CONCURRENT_NOTIFICATIONS=10
BATCH_SIZE=100
PROCESSING_TIMEOUT_MS=30000